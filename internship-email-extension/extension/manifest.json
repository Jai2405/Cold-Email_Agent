{
  "manifest_version": 3,
  "name": "Cold Email Assistant",
  "version": "1.0",
  "description": "Generate personalized cold emails for internship applications",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel",
    "storage"
  ],
  "action": {
    "default_title": "Generate cold emails",
    "default_icon": {
      "16": "email-svgrepo-com.png",
      "32": "email-svgrepo-com.png",
      "48": "email-svgrepo-com.png",
      "128": "email-svgrepo-com.png"
    }
  },
  "icons": {
    "16": "email-svgrepo-com.png",
    "32": "email-svgrepo-com.png",
    "48": "email-svgrepo-com.png",
    "128": "email-svgrepo-com.png"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["panel.html", "panel.js", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
} 